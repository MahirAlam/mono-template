{
  "name": "create-t3-turbo",
  "root": true,
  "private": true,
  "engines": {
    "node": ">=22.20.0",
    "pnpm": ">=10.15.1"
  },
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "auth:generate": "pnpm -F @tera/auth generate",
    "db:push": "turbo -F @tera/db push",
    "db:studio": "turbo -F @tera/db studio",
    "dev": "turbo watch dev --continue",
    "dev:expo": "turbo watch dev -F @tera/expo...",
    "dev:next": "turbo watch dev -F @tera/nextjs...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws -f",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "pnpm": {
    "overrides": {
      "react-native-css": "3.0.1",
      "metro-runtime": "0.83.3",
      "lightningcss": "1.30.1"
    }
  },
  "devDependencies": {
    "@tera/prettier-config": "workspace:*",
    "@turbo/gen": "^2.5.8",
    "@types/node": "^22.18.12",
    "dotenv-cli": "^10.0.0",
    "prettier": "catalog:",
    "turbo": "^2.5.8",
    "typescript": "catalog:"
  },
  "prettier": "@tera/prettier-config"
}
